<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new mictopost..." %>
  </div>
    <div class="field">
      <%= f.file_field :photo %>
  </div>
  <%= f.submit "Post", class: "btn btn-lg btn-primary" %>
<% end %>